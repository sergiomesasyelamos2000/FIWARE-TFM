curl -s -o /dev/null -X POST \
  "http://iot-agent:$IOTA_NORTH_PORT/iot/devices" \
  -H 'Content-Type: application/json' \
  -H 'fiware-service: openiot' \
  -H 'fiware-servicepath: /' \
  -d '{
    "devices": [
        {
            "device_id": "locationUser001",
            "entity_name": "urn:ngsi-ld:LocationUser:001",
            "entity_type": "LocationUser",
            "protocol": "PDI-IoTA-UltraLight",
            "transport": "MQTT",
            "timezone": "Europe/Madrid",
            "attributes": [
                {
                    "object_id": "timestamp_sensor",
                    "name": "timestamp_sensor",
                    "type": "DateTime"
                },
                {
                    "object_id": "x1",
                    "name": "x1",
                    "type": "Number"
                },
                {
                    "object_id": "x2",
                    "name": "x2",
                    "type": "Number"
                },
                {
                    "object_id": "y1",
                    "name": "y1",
                    "type": "Number"
                },
                {
                    "object_id": "y2",
                    "name": "y2",
                    "type": "Number"
                },
                {
                    "object_id": "uncertain",
                    "name": "uncertain",
                    "type": "Float"
                },
                {
                    "object_id": "user_id",
                    "name": "user_id",
                    "type": "Text"
                }
            ]
        }
    ]
}
'

curl -s -o /dev/null -X POST \
  "http://orion:${ORION_PORT}/v2/subscriptions/" \
  -H 'Content-Type: application/json' \
  -H 'fiware-service: openiot' \
  -H 'fiware-servicepath: /' \
  -d '{
  "description": "Notify Quantum Leap to sample BinarySensor changes every second",
  "subject": {
    "entities": [
      {
        "idPattern": ".*"
      }
    ]
  },
  "notification": {
    "http": {
      "url": "http://quantumleap:8668/v2/notify"
    },
    "metadata": ["dateCreated", "dateModified"]
  },
  "throttling": 1
}'